<h1 class="center"> Dashboard</h1>

<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#storico">Storico</a></li>
        <li class="tab col s3"><a href="#vendita">In Vendita</a></li>
       
      </ul>
    </div>

    <div id="storico" class="col s12">Test 1</div>
        <h4><b> Vendite </b></h4>
            <table>
            	<thead>
            			<tr> 
            				<th> Nome </th>
            				<th> Prezzo </th>
            				<th> Data </th>
            				<Th> Acquirente </Th>	
            			</tr>
            	</thead>	
            		<tbody>
            			<% @sales.each do |sale| %>
            				<tr> 
            					<th> <%= sale.content.titolo %> </th>
            					<th> <%= number_to_currency(sale.amount / 100) %></th>
            					<th> <%= time_ago_in_words(sale.created_at %>fa</th>
            					<Th> <%= sale.email_acquirente %> 
            				</tr>
        				<%end%>
        			</tbody>
            </table>



    	<h4><b> Acquisti </b></h4>
    	<table>
    		<thead>
    			<tr> 
    				<th> Nome </th>
    				<th> Prezzo </th>
    				<th> Data di Creazione </th>
    				<Th> Venditore </Th>	
    			</tr>
    		</thead>	
    				<tbody>
    			         <% @purchased.each do |purchased| %>
            				<tr> 
            					<th> <%= link_to purchased.content.titolo, pickup_path(purcharsed.guid) %> </th>
            					<th> <%= number_to_currency(purchased.amount / 100)  %></th>
            					<th> <%= time_ago_in_words(purchased.created_at) %>fa</th>
            					<th> <%= purchased.email_venditore %></th>
            				</tr>
				        <%end%>
					</tbody>
    	</table>

    </div>

 </div>